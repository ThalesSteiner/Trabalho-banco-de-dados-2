{
	"name": "League of Legends Database Project",
	"dockerComposeFile": "../docker-compose.yml",
	"service": "devcontainer",
	"workspaceFolder": "/workspace",
	"shutdownAction": "stopCompose",
	
	"features": {
		"ghcr.io/devcontainers/features/python:1": {
			"version": "3.11"
		},
		"ghcr.io/devcontainers/features/git:1": {}
	},

	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"cweijan.vscode-postgresql-client2",
				"grafana.grafana"
			],
			"settings": {
				"python.defaultInterpreterPath": "/usr/local/bin/python",
				"python.linting.enabled": true,
				"python.linting.pylintEnabled": true
			}
		}
	},

	"forwardPorts": [
		5432,
		3000
	],

	"portsAttributes": {
		"5432": {
			"label": "PostgreSQL",
			"onAutoForward": "notify"
		},
		"3000": {
			"label": "Grafana",
			"onAutoForward": "notify"
		}
	},

	"postCreateCommand": "cd /workspace && pip install --upgrade pip && pip install -r requirements.txt && echo 'Dependências Python instaladas com sucesso!'",
	"postStartCommand": "echo 'Serviços iniciados: PostgreSQL (5432) e Grafana (3000)'",
	
	"remoteUser": "vscode"
}
